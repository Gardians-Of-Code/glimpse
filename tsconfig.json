{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": [
    "node_modules"
  ],
  "include": [
    ".plasmo/index.d.ts",
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "compilerOptions": {
    "paths": {
      "~*": [
        "./src/*"
      ],
      // Uncomment the following lines if you want to add a ui library and after installing it comment it again
      // "@*": [
      //   "./src/*"
      // ],
      "@/components*":[
        "./src/components*"
      ],
      "@/components/ui/*":[
        "./src/components/ui/*"
      ],
      "@/lib*":[
        "./src/lib*"
      ],
    },
    "baseUrl": "."
  }
}
